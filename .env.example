# Forex Edge Environment Configuration
# Copy this file to .env and fill in your actual values

# ===========================================
# REQUIRED - Application will not start without these
# ===========================================

# Session Secret (generate with: openssl rand -hex 32)
SESSION_SECRET=your-random-session-secret-here-min-32-chars

# Database Password (used by docker-compose to build DATABASE_URL)
POSTGRES_PASSWORD=your_secure_db_password_here

# AI Provider API Key (at least one is required)
# Groq is recommended - fast and reliable for forex analysis
GROQ_API_KEY=gsk_your_groq_api_key_here

# Alternative AI providers (optional if GROQ_API_KEY is set)
CUSTOM_OPENAI_API_KEY=sk-your_openai_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# ===========================================
# OPTIONAL - Features disabled without these
# ===========================================

# Email Service (Resend) - for email verification
RESEND_API_KEY=re_your_resend_api_key_here

# Payment Gateway (Paystack) - for credit purchases in ZAR
PAYSTACK_SECRET_KEY=sk_live_your_paystack_secret_key_here

# ===========================================
# ADMIN CONFIGURATION
# ===========================================

# Comma-separated list of admin email addresses
ADMIN_EMAILS=admin@yourdomain.com

# ===========================================
# OPTIONAL - Override defaults if needed
# ===========================================

# NODE_ENV=production
# PORT=5000

# Use DATABASE_URL only for external databases (not Docker Compose)
# DATABASE_URL=postgresql://user:pass@external-host:5432/forexedge
