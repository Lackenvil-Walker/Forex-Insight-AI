# ForexAI Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# DATABASE
# ===========================================
DATABASE_URL=postgresql://username:password@localhost:5432/forexai

# ===========================================
# SESSION & SECURITY
# ===========================================
SESSION_SECRET=your-random-session-secret-here-min-32-chars

# ===========================================
# AI PROVIDER (choose one)
# ===========================================
# Groq API (recommended - free tier available)
GROQ_API_KEY=gsk_your_groq_api_key_here

# OpenAI API (optional - if using OpenAI instead of Groq)
CUSTOM_OPENAI_API_KEY=sk-your_openai_api_key_here

# ===========================================
# EMAIL SERVICE (Resend)
# ===========================================
RESEND_API_KEY=re_your_resend_api_key_here

# ===========================================
# PAYMENT (Paystack)
# ===========================================
PAYSTACK_SECRET_KEY=sk_live_your_paystack_secret_key_here

# ===========================================
# ADMIN CONFIGURATION
# ===========================================
# Comma-separated list of admin email addresses
ADMIN_EMAILS=admin@yourdomain.com

# ===========================================
# APPLICATION SETTINGS
# ===========================================
NODE_ENV=production
PORT=5000
